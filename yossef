  <div class="card">
    <h1>حاسبة العمر</h1>
    <label for="birthdate">ادخل تاريخ ميلادك:</label>
    <input type="date" id="birthdate" />
    <button onclick="calculateAge()">احسب العمر</button>
    <div id="result"></div>
  </div>

  <script>
    function calculateAge() {
      const birthInput = document.getElementById("birthdate").value;
      if (!birthInput) {
        document.getElementById("result").textContent = "من فضلك أدخل تاريخ الميلاد";
        return;
      }

      const birthDate = new Date(birthInput);
      const today = new Date();

      let age = today.getFullYear() - birthDate.getFullYear();
      const monthDiff = today.getMonth() - birthDate.getMonth();
      const dayDiff = today.getDate() - birthDate.getDate();

      if (monthDiff < 0 || (monthDiff === 0 && dayDiff < 0)) {
        age--;
      }

      document.getElementById("result").textContent = `عمرك الحالي هو: ${age} سنة 🎉`;
    }
  </script>
